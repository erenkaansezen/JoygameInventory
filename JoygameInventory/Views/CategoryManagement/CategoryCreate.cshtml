@model CategoryViewModel
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h3> | Yeni Kategori Ekle </h3>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<form asp-action="CategoryCreate" method="post">
    <a asp-action="CategoryList" class="btn btn-dark">Geriye Dön</a>
    <br />
    <br />

    <!-- Kullanıcı Adı ve Email -->
    <div class="mb-3">
        <label asp-for="Name">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Url">Kategori Url</label>
        <input asp-for="Url" class="form-control"/>
    </div>
    <br />
    <button class="btn btn-dark">Kaydet</button>
</form>
