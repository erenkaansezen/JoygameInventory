@model ProductEditViewModel
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<div class="container my-5">
    <h2 class="my-4 text-center">
        | Envanter Ekleme 
    </h2> 
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <hr />

    <form asp-action="ProductCreate" method="post">
        <!-- Hidden input for Id -->
        <input asp-for="Id" type="hidden" />

        <a asp-action="ProductList" class="btn btn-dark">Geriye Dön</a>
        <br />
        <br />

        <!-- Ürün Bilgileri -->
        <section class="mb-5">
            <h4 class="section-title">Ürün Bilgileri</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ProductBarkod" class="form-label">Ürün Barkodu</label>
                    <input asp-for="ProductBarkod" class="form-control" />
                    <span asp-validation-for="ProductBarkod" class="text-danger"></span> 
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ProductBrand" class="form-label">Ürün Markası</label>
                    <input asp-for="ProductBrand" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span> 
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ProductModel" class="form-label">Ürün modeli</label>
                    <input asp-for="ProductModel" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span> 
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SerialNumber" class="form-label">Seri Numarası</label>
                    <input asp-for="SerialNumber" class="form-control" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span> 
                </div>
            </div>
             <div class="mb-3">
                <label asp-for="SelectedCategoryId" class="form-label">Ürün Kategorisi</label>
                <select asp-for="SelectedCategoryId" class="form-control">
                    <option>
                        Kategori seç
                    </option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">
                            @category.Name
                        </option>
                    }
                </select>

            </div>
        </section>
        <!-- Dropdown ile Personel Seçimi -->

            <br />
        <!-- Kaydet Butonu -->
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-outline-danger">Ürünü Ekle </button>
            </div>
        </div>
    </form>

</div>


<!-- Özelleştirilmiş Stil -->
<style>
    /* Özelleştirilmiş Stil */
    .container {
        max-width: 1200px;
    }

    .section-title {
        font-size: 1.5rem;
        margin-bottom: 20px;
        color: #333;
    }

    .list-group-item {
        background-color: whitesmoke;
        border: 1px solid #ddd;
        padding: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .form-control {
        border: 1px solid #ced4da;
        padding: 10px;
        border-radius: 4px;
    }
</style>
