@model IEnumerable<Licence>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

<!-- Sayfa Başlığı -->
<div class="container">
    <h2 class="my-4">
        | Lisans Listesi
    </h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <a asp-action="LicenceCreate" class="btn btn-outline-success btn-custom ms-2 w-100">Lisans Ekle</a>
        </div>
        <div class="col-md-6">
            <form asp-action="LicenceList" method="get">
                <div class="input-group mb-3">
                    <input type="text" id="searchTerm" name="searchTerm" class="form-control" placeholder="Lisans İsmi ile ara" />
                </div>
            </form>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Kullanıcılar Tablosu -->
        <div class="table-container">
            <table id="licenceTable" class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Lisans Adı</th>
                        <th>Bitiş Süresi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lisans in Model)
                    {
                        <tr>
                            <td>@lisans.Id</td>
                            <td>@lisans.LicenceName</td>
                            <td>@lisans.LicenceEndDate.ToString("dd-MM-yyyy")</td>
                            <td class="text-end">
                                <!-- Align buttons to the right -->
                                <a asp-action="LicenceDetails" asp-route-id="@lisans.Id" class="btn btn-outline-dark btn-custom">Lisans Detayı</a>

                                <form id="deleteForm" asp-controller="Management" asp-action="StaffDelete" method="post" style="display: inline;">
                                    <input type="hidden" value="@lisans.Id" name="id">
                                    <button type="button" class="btn btn-danger btn-custom" id="deleteButton">Lisansı Sil</button>
                                </form>

                                <script>
                                    $(document).ready(function () {
                                    $('#searchTerm').on('keyup', function () {
                                        var searchTerm = $(this).val().toLowerCase();  // Arama terimini al

                                        // Tablo satırlarını kontrol et
                                        $('#licenceTable tbody tr').each(function () {
                                            var row = $(this);  // Her bir satır
                                            var text = row.text().toLowerCase();  // Satırdaki tüm yazıyı al

                                            // Eğer satırda arama terimi bulunuyorsa, satırı göster
                                            if (text.indexOf(searchTerm) !== -1) {
                                                row.show();
                                            } else {
                                                row.hide();  // Arama terimi satırda yoksa, satırı gizle
                                            }
                                        });
                                    });
                                        // Silme butonuna tıklama olayını ekliyoruz
                                        $('#deleteButton').click(function () {
                                            // Silme işlemi için onay alıyoruz
                                            if (confirm('Emin misiniz?')) {
                                                var form = $('#deleteForm');  // Formu alıyoruz
                                                var formData = form.serialize();  // Form verilerini serialize ediyoruz

                                                $.ajax({
                                                    url: form.attr('action'),  // Formun action URL'sini alıyoruz
                                                    type: form.attr('method'),  // Formun method'ünü alıyoruz
                                                    data: formData,  // Form verilerini gönderiyoruz
                                                    success: function (response) {
                                                        alert('Lisans başarıyla silindi!');
                                                        location.reload();  // Sayfayı yeniden yüklüyoruz
                                                    },
                                                    error: function (xhr, status, error) {
                                                        alert('Bir hata oluştu: ' + error);
                                                    }
                                                });
                                            }
                                        });
                                    });
                                </script>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</div>
</html>
