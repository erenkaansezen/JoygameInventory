@model IEnumerable<JoyUser>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

    <!-- Sayfa Başlığı -->
    <div class="container">
    <h2 class="my-4 ">
        | Panel Kullancıları
    </h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <a asp-controller="User" asp-action="UserRegister" class="btn btn-outline-success btn-custom ms-2 w-100">Kullanıcı Ekle</a>
        </div>
        <div class="col-md-6">
            <form asp-action="UserList" method="get">
                <div class="input-group mb-3">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Personel İsmi Veya Email Adresi ile ara" />
                    <button class="btn btn-outline-secondary" type="submit">Ara</button>
                </div>
            </form>
        </div>
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model)
                    {
                        <tr>
                            <td>@users.UserName</td>
                            <td>@users.Email</td>
                            <td>
                                <a asp-controller="User" asp-action="UserDetails" asp-route-id="@users.Id" class="btn btn-outline-dark btn-custom">Görüntüle & Düzenle</a>
                                <form asp-controller="User" asp-action="UserDelete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline;">
                                    <input type="hidden" value="@users.Id" name="id">
                                    <button type="submit" class="btn btn-danger btn-custom">Kullanıcıyı Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>

    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</html>
