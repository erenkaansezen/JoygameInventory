@model IEnumerable<JoyUser>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

    <!-- Sayfa Başlığı -->
    <div class="container">
        <h2 class="my-4 text-center">Panel Kullanıcıları</h2>
        <hr />
        <!-- Kullanıcılar Tablosu -->
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model)
                    {
                        <tr>
                            <td>@users.Id</td>
                            <td>@users.FirstName @users.LastName</td>
                            <td>@users.Email</td>
                            <td>Admin</td>
                            <td>
                                <button class="btn btn-outline-dark btn-custom">
                                    <i class="fas fa-eye"></i> Görüntüle
                                </button>
                                <button class="btn btn-outline-dark btn-custom ms-2">
                                    <i class="fas fa-edit"></i> Düzenle
                                </button>
                                <button class="btn btn-delete btn-custom ms-2">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>

    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</html>
