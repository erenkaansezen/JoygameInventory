@model UserEditViewModel
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<br />
<h3> | Kullanıcı Bilgisi </h3>
<br />
<p> "@Model.FullName"  Personelinin Detayları </p>
<hr />

<form asp-action="UserEdit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" type="hidden" value="@Model.Id" />

    <!-- Kullanıcı Adı ve Email -->
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

     <!-- Parola Güncelleme -->
    <div class="card">
        <div class="card-header">
            Parola Güncelle
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>
    </div>

    <!-- Roller -->
    <div class="card">
        <div class="card-header">
            Roller
        </div>
        <div class="card-body">
            @foreach (var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedRoles"
                           value="@role"
                           id="@role"
                           @if (Model.SelectedRoles != null && Model.SelectedRoles.Contains(role))
                           {
                               @:checked
                           } />
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div> 


    <br />
    <button class="btn btn-dark">Kaydet</button>
</form>
