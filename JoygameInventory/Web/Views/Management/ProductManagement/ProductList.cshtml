@model IEnumerable<Product>
<!DOCTYPE html>
<html lang="tr">
<head>
    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }

        .product-img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- Sayfa Başlığı -->
    <div class="container">
        <h2 class="my-4 text-center">Envanter Ürünleri</h2>
        <hr />
        <!-- Ürünler Tablosu -->
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Seri Numarası</th>
                        <th>Resim</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.ProductName</td>
                            <td>@product.Description</td>
                            <td>@product.SerialNumber</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.img))
                                {
                                    <img src="@product.img" alt="@product.ProductName" class="product-img" />
                                }
                                else
                                {
                                    <span>Resim Yok</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-outline-dark btn-custom">
                                    <i class="fas fa-eye"></i> Görüntüle
                                </button>
                                <button class="btn btn-outline-dark btn-custom ms-2">
                                    <i class="fas fa-edit"></i> Düzenle
                                </button>
                                <button class="btn btn-delete btn-custom ms-2">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
