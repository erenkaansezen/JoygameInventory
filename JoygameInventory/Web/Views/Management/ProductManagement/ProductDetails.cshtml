@model ProductEditViewModel
@{
    Layout = "_Layout";  // Varsayılan olarak yeni layout'u kullan
}

<div class="container my-5">
    <h2 class="text-center mb-4">Ürün Detayları</h2>

    <form asp-action="ProductDetails" method="post">
        <input name="Id" type="hidden" value="@Model.Id" />

        <!-- Ürün Bilgileri -->
        <section class="mb-5">
            <h4 class="section-title">Ürün Bilgileri</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="ProductBarkod" class="form-label">Ürün Barkodu</label>
                    <input asp-for="ProductBarkod" id="ProductBarkod" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="ProductName" class="form-label">Ürün Adı</label>
                    <input asp-for="ProductName" id="ProductName" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <input asp-for="Description" id="Description" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="SerialNumber" class="form-label">Seri Numarası</label>
                    <input asp-for="SerialNumber" id="SerialNumber" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Status" class="form-label">Durum</label>
                    <input asp-for="Status" id="Status" class="form-control" />
                </div>
            </div>
        </section>

        <!-- Mevcut Atamalar -->
        <section class="mb-5">
            <h4 class="section-title">Mevcut Atama</h4>
            @if (Model.InventoryAssigments != null && Model.InventoryAssigments.Any())
            {
                <div class="list-group">
                    @foreach (var item in Model.InventoryAssigments)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>@item.User.Name @item.User?.Surname</strong><br />
                                <span class="text-muted">@item.AssignmentDate.ToString("yyyy-MM-dd")</span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Bu ürün için zimmetli personel bulunmamaktadır.</p>
            }
        </section>

        <!-- Önceki Sahipler -->
        <section class="mb-5">
            <h4 class="section-title">Önceki Atama</h4>
            @if (Model.PreviousAssignments != null && Model.PreviousAssignments.Any())
            {
                <ul class="list-group">
                    @foreach (var previousAssignment in Model.PreviousAssignments)
                    {
                        <li class="list-group-item">
                            <strong>@previousAssignment.User.Name @previousAssignment.User?.Surname</strong><br />
                            <span class="text-muted">@previousAssignment.AssignmentDate.ToString("yyyy-MM-dd")</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Geçmiş sahibi bulunamadı.</p>
            }
        </section>

        <!-- Kaydet Butonu -->
        <div class="text-center">
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

<!-- Özelleştirilmiş Stil -->
<style>
    /* Özelleştirilmiş Stil */
    .container {
        max-width: 1200px;
    }

    .section-title {
        font-size: 1.5rem;
        margin-bottom: 20px;
        color: #333;
    }

    .list-group-item {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .form-control {
        border: 1px solid #ced4da;
        padding: 10px;
        border-radius: 4px;
    }
</style>
