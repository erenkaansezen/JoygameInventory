@model IEnumerable<JoyStaff>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

    <!-- Sayfa Başlığı -->
    <div class="container">
    <h2 class="my-4 text-center">
        <img src="~/img/Joygamelogo2.png" style="max-width: 150px; height: auto" alt="Logo">
        | Personel Listesi
    </h2>
        <hr />
    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-outline-success btn-custom ms-2 w-100">
                <i class="fas fa-edit"></i> Personel Ekle
            </button>
        </div>
        <div class="col-md-6">
            <form asp-action="StaffList" method="get">
                <div class="input-group mb-3">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Personel ismi ile ara" />
                    <button class="btn btn-outline-secondary" type="submit">Ara</button>
                </div>
            </form>
        </div>
        <!-- Kullanıcılar Tablosu -->
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model)
                    {
                        <tr>
                            <td>@users.Name @users.Surname</td>
                            <td>@users.Email</td>
                            <td>@users.PhoneNumber</td>
                            <td>
                            <a asp-controller="Management" asp-action="StaffDetails" asp-route-id="@users.Id" class="btn btn-outline-dark btn-custom">
                                <i class="fas fa-eye"></i>Personel Detayı
                            </a>

                                <button class="btn btn-delete btn-custom ms-2">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>

    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</html>
