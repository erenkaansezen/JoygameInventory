@model IEnumerable<JoyStaff>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

<body>
    <!-- Sayfa Başlığı -->
    <div class="container">
        <h2 class="my-4">| Personel Listesi</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <a asp-controller="Management" asp-action="StaffRegister" class="btn btn-outline-success btn-custom ms-2 w-100">Kullanıcı Ekle</a>
            </div>
            <div class="col-md-6">
                <form asp-action="StaffList" method="get">
                    <div class="input-group mb-3">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Kullanıcı İsmi Veya Email Adresi ile ara" />
                        <button class="btn btn-outline-secondary" type="submit">Ara</button>
                    </div>
                </form>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Kullanıcılar Tablosu -->
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ad</th>
                        <th>Email</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var users in Model)
                    {
                        <tr data-id="@users.Id">
                            <td>@users.Id</td>
                            <td>@users.Name @users.Surname</td>
                            <td>@users.Email</td>
                            <td>
                                <a asp-controller="StaffManagement" asp-action="StaffDetails" asp-route-id="@users.Id" class="btn btn-outline-dark btn-custom">Personel Detayı</a>

                                <form class="d-inline" asp-controller="StaffManagement" asp-action="StaffDelete" method="post">
                                    <input type="hidden" name="id" value="@users.Id">
                                    <button type="button" class="btn btn-danger btn-custom deleteStaff" data-id="@users.Id">Kullanıcıyı Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // 'Kullanıcıyı Sil' butonuna tıklama olayını dinliyoruz
            $('.deleteStaff').click(function (e) {
                e.preventDefault();  // Default form submit işlemini engelliyoruz

                var button = $(this);  // Butonu alıyoruz
                var form = button.closest('form');  // Formu alıyoruz
                var row = button.closest('tr');  // Satırın kendisini alıyoruz

                if (confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')) {
                    // AJAX isteği
                    $.ajax({
                        url: form.attr('action'),  // Formun action değerini alıyoruz
                        type: form.attr('method'),  // Formun method türünü alıyoruz (POST)
                        data: form.serialize(),  // Form verilerini alıyoruz
                        success: function (response) {
                            row.remove();  // Başarıyla silindiğinde satırı kaldır
                            alert('Kullanıcı başarıyla kaldırıldı!');
                        },
                        error: function () {
                            alert('Bir hata oluştu, lütfen tekrar deneyin.');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
