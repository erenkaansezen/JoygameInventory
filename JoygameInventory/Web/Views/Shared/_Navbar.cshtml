<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISTORE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ISTORE.styles.css" asp-append-version="true" />
    <style>
        #sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #f8f9fa;
            color: #333;
            padding: 0;
            box-shadow: 2px 0px 15px rgba(0, 0, 0, 0.1);
            border-top-right-radius: 15px;
            border-bottom-right-radius: 15px;
            transition: all 0.3s ease-in-out;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Sidebar listesi */
        #sidebar ul {
            list-style: none;
            padding: 0;
            font-size: 10px;
        }

            #sidebar ul li {
                text-align: center;
            }

                #sidebar ul li a {
                    color: #333;
                    text-decoration: none;
                    display: block;
                    padding: 12px 20px;
                    font-size: 18px;
                    text-align: center;
                    border-left: 5px solid transparent;
                    transition: background-color 0.3s ease, color 0.3s ease, border-left 0.3s ease;
                }

                    #sidebar ul li a.active {
                        background-color: #343a40;
                        color: #fff;
                        border-left: 5px solid green;
                    }

                    #sidebar ul li a:hover {
                        background-color: #343a40;
                        color: #fff;
                    }

        .sidebar-header {
            padding: 30px;
            background-color: #f8f9fa;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

            .sidebar-header img {
                max-width: 150px;
                height: auto;
            }

        /* Dropdown Menü */
        .dropdown {
            width: 100%;
        }

        .dropdown-toggle {
            color: white;
            text-decoration: none;
            display: block;
            text-align: center;
            background-color: #f8f9fa;
            width: 100%;
        }

            .dropdown-toggle:focus {
                outline: none; /* Ensure focus doesn't add outline */
                box-shadow: none; /* Ensure no box shadow appears */
            }

        .dropdown-menu {
            background-color: #f8f9fa;
            color: white;
            width: 100%;
            display: none; /* Başlangıçta gizli */
            position: relative; /* Pozisyonu ayarlıyoruz */
        }

            .dropdown-menu.show {
                display: block; /* show sınıfı eklenince görünür */
            }

        .dropdown-item {
            color: black;
            text-align: center;
            font-size: 15px !important;
        }

            .dropdown-item:hover {
                background-color: white;
                color: #343a40;
            }


    </style>
</head>

<body>
    <nav>
        <!-- Sidebar -->
        <div id="sidebar" class="d-flex flex-column">
            <div class="sidebar-header">
                <img src="~/img/Joygamelogo2.png" alt="Logo">
            </div>
            <br />
            <ul class="nav flex-column">
                <!-- Dropdown Menü -->
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle nav-link" href="#" id="dropdownMenuButton" role="button" aria-expanded="false">
                        <i class="fas fa-box"></i> Panel Yönetimi
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" asp-controller="User" asp-action="UserList">Panel Kullanıcı İşlemleri</a></li>
                    </ul>
                </li>
                <!-- Dropdown Menü -->
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle nav-link" href="#" id="dropdownMenuButton2" role="button" aria-expanded="false">
                        <i class="fas fa-box"></i> Envanter Yönetimi
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li><a class="dropdown-item" asp-controller="ProductManagement" asp-action="ProductList">Envanter İşlemleri</a></li>
                        <li><a class="dropdown-item" asp-controller="CategoryManagement" asp-action="CategoryList">Kategori İşlemleri</a></li>
                        <li><a class="dropdown-item" asp-controller="LicenceManagement" asp-action="LicenceList">Lisans İşlemleri</a></li>
                        <li><a class="dropdown-item" asp-controller="Maintenance" asp-action="MaintenanceList">Servis İşlemleri</a></li>

                    </ul>
                </li>
                <!-- Dropdown Menü -->
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle nav-link" href="#" id="dropdownMenuButton3" role="button" aria-expanded="false">
                        <i class="fas fa-box"></i> Personel Yönetimi
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton3">
                        <li><a class="dropdown-item" asp-controller="StaffManagement" asp-action="StaffList">Personel İşlemleri</a></li>
                        <li><a class="dropdown-item" asp-controller="TeamManagement" asp-action="TeamList">Takım İşlemleri</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Çıkış
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- jQuery ve Bootstrap Bundle JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>


        // Dropdown menüsünü açma ve kapama işlevi
        document.querySelectorAll('.dropdown-toggle').forEach(function (dropdownToggle) {
            dropdownToggle.addEventListener('click', function (e) {
                var dropdownMenu = this.nextElementSibling; // Dropdown menüsünü alıyoruz

                // Eğer menü zaten açıksa, menüyü kapatıyoruz
                if (dropdownMenu.classList.contains('show')) {
                    dropdownMenu.classList.remove('show');
                } else {
                    // Aksi takdirde menüyü açıyoruz
                    dropdownMenu.classList.add('show');
                }

                // Tıklama olayının propagasyonunu durduruyoruz
                e.stopPropagation();
            });
        });
    </script>
</body>
