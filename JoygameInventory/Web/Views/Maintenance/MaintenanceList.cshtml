@model IEnumerable<Maintenance>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        .table-container {
            margin-top: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-custom {
            padding: 8px 12px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-delete {
            background-color: #d9534f;
            color: white;
        }

        .btn-view {
            background-color: #5bc0de;
            color: white;
        }
    </style>
</head>

<!-- Sayfa Başlığı -->
<div class="container">
    <h2 class="my-4">
        | Servis Listesi
    </h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <a asp-action="MaintenanceCreate" class="btn btn-outline-success btn-custom ms-2 w-100">Servis Kaydı Ekle</a>
        </div>
        <div class="col-md-6">
            <form asp-action="MaintenanceList" method="get">
                <div class="input-group mb-3">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Ürün Barkodu ile ara" />
                    <button class="btn btn-outline-secondary" type="submit">Ara</button>
                </div>
            </form>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Kullanıcılar Tablosu -->
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Servis Kayıt Numarası</th>
                        <th>Servise Giden Ürün</th>
                        <th>Servis Açıklaması</th>
                        <th>Servis Başlangıç Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ServiceDetails in Model)
                    {
                        <tr>
                            <td>@ServiceDetails.Id</td>
                            <td>@ServiceDetails.ProductBarkod</td>
                            <td>@ServiceDetails.MaintenanceDescription</td>
                            <td>@ServiceDetails.CreatedAt.ToString("dd-MM-yyyy")</td>
                            <td class="text-end">
                                <!-- Align buttons to the right -->
                                <a asp-action="MaintenanceDetails" asp-route-id="@ServiceDetails.Id" class="btn btn-outline-dark btn-custom">Servisi Tamamla</a>

                                <form asp-controller="Maintenance" asp-action="StaffDelete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline;">
                                    <input type="hidden" value="@ServiceDetails.Id" name="id">
                                    <button type="submit" class="btn btn-danger btn-custom">Servis Kaydını Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- Bootstrap ve jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</div>
</html>
